<link rel="stylesheet" href="@App.Path/dist/styles.css" data-enableoptimizations="true" />
<div class="ga-wrapper">
    <div class="ga-albums row">
        @foreach (var album in AsDynamic(Data["Default"]))
        {
            <div class="ga-album col-xs-6 col-sm-4 col-md-4 col-lg-4 sc-element">
                @album.Toolbar
                <a href='@Link.To(parameters: "mid=" + Dnn.Module.ModuleID + "&album=" + album.Path)' oldhref="@Dnn.Tab.FullUrl/mid/@Dnn.Module.ModuleID/album/@album.Path">
                    @if (!String.IsNullOrEmpty(album.AlbumThumbnail))
                    {
                        <span class="ga-img">
                            <span class="ga-img-overlay"><i class="glyphicon glyphicon-picture"></i></span>
                            <img class="img-responsive" src="@album.AlbumThumbnail?w=@App.Settings.AlbumThumbnailWidth&h=@App.Settings.AlbumThumbnailHeight&mode=crop&scale=both&quality=80" alt="@album.Title" />
                        </span>
                    }
                    <h3>@album.Title <span class="ga-badge">@AsAdam(album, "Images").Files.Count</span></h3>
                </a>
            </div>
        }
    </div>
</div>